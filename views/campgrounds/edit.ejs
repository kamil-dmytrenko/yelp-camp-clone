<%+ extend('layout') %>

<%+ section('content') %>

<div class="container">
    <h1>Edit <%= campground.name %> campground</h1>

    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label>Campground name:</label>
            <input name="campground[name]" class="form-control" value="<%= campground.name %>">
        </div>
        <div class="form-group">
            <label>Image url:</label>
            <input name="campground[image]" class="form-control" value="<%= campground.image %>">
        </div>
        <div class="form-group">
            <label>Campground price:</label>
            <input class="form-control" type="number" min="0.01" step="0.01"
                   name="campground[price]" value="<%= campground.price %>">
        </div>
        <div class="form-group">
            <label>Campground description:</label>
            <input name="campground[description]" class="form-control" value="<%= campground.description %>">
        </div>

        <button class="btn btn-success">Edit</button>
    </form>

    <a class="btn btn-primary" href="/campgrounds">Go back</a>
</div>

<%+ endSection %>