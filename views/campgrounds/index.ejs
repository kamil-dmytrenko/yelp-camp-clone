<% include ../partials/header.ejs%>



<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world.</p>
            <p>
                <a class="btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our most popular campsites</h3>
        </div>
    </div>

    <div class="row">
        <% camps.forEach(function (camp) { %>
        <div class="col-md-3 col-sm-6">
            <div class="card">
                <img class="card-img-top" src="<%= camp.image %>" alt="campsite photo of <%= camp.name %>">
                <div class="card-body">
                    <h5 class="card-title"><%= camp.name %></h5>
                    <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>


<% include ../partials/footer.ejs%>