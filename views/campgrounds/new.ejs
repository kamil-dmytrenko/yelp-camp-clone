<%+ extend('layout') %>

<%+ section('content') %>

<div class="container">
    <h1>Create new campground</h1>

    <form action="/campgrounds" method="POST">
        <div class="form-group">
            <label>Campground name:</label>
            <input class="form-control" type="text" name="campName"   placeholder="Enter campground name">
        </div>
        <div class="form-group">
            <label>Image url:</label>
            <input class="form-control" type="text" name="campImg" placeholder="Enter image url">
        </div>
        <div class="form-group">
            <label>Campground price:</label>
            <input class="form-control" type="number" min="0.01" step="0.01"
                   name="campPrice"   placeholder="Enter campground price" >
        </div>
        <div class="form-group">
            <label>Campground description:</label>
            <input class="form-control" type="text" name="campDescription" placeholder="Enter campground description">
        </div>

        <button class="btn btn-success">Create</button>
    </form>

    <a class="btn btn-primary" href="/campgrounds">Go back</a>
</div>

<%+ endSection %>