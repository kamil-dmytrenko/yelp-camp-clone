<%+ extend('layout') %>

<%+ section('content') %>

<div class="container">
    <h1>Edit Comment></h1>

    <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label>Comment:</label>
            <input name="comment[text]" class="form-control" value="<%= comment.text %>">
        </div>
        <button class="btn btn-success">Create</button>
    </form>

    <a class="btn btn-primary" href="/campgrounds">Go back</a>
</div>

<%+ endSection %>