<%+ extend('layout') %>

<%+ section('content') %>

<div class="container">
    <h1>Add New Comment to <%= campground.name %></h1>

    <form action="/campgrounds/<%= campground._id%>/comments" method="POST">
        <div class="form-group">
            <label>Comment:</label>
            <input name="comment[text]" class="form-control" placeholder="text">
        </div>
        <div class="form-group">
            <label>Your name:</label>
            <input name="comment[author]" class="form-control" placeholder="author">
        </div>
        <button class="btn btn-success">Create</button>
    </form>

    <a class="btn btn-primary" href="/campgrounds">Go back</a>
</div>

<%+ endSection %>